<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:isScrollContainer="false"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_jornadas_v2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:text="@string/title_jornadas_v"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/subTitle_jornadas_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:text="@string/subTitle_jornadas_v"
                android:textAlignment="textStart"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="208dp"
                app:srcCompat="@drawable/politica_2_foto" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="16dp"
                    app:srcCompat="@drawable/ic_event_black_24dp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:paddingStart="2dp"
                    android:text="@string/fecha_jornadas_v"
                    android:textSize="12sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/content1_jornadas_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="1sp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:text="@string/content1_jornadas_v"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/content2_jornadas_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="1sp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:text="@string/content2_jornadas_v"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/content3_jornadas_v2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:text="@string/content3_jornadas_v"
                android:textAlignment="gravity"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/content4_jornadas_v2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="37dp"
                android:paddingStart="0dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:text="@string/content4_jornadas_v"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/content5_jornadas_v2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="37dp"
                android:lineSpacingExtra="1sp"
                android:paddingStart="0dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:text="@string/content5_jornadas_v"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/content6_jornadas_v2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="37dp"
                android:lineSpacingExtra="1sp"
                android:paddingStart="0dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:text="@string/content6_jornadas_v"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/content7_jornadas_v2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="37dp"
                android:lineSpacingExtra="1sp"
                android:paddingStart="0dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:text="@string/content7_jornadas_v"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="4dp"
                android:text="@string/cartelJornadasV"
                android:textColor="@color/colorPrimary" />

            <ImageView
                android:id="@+id/cartelJornadasV"
                android:layout_width="match_parent"
                android:layout_height="521dp"
                android:layout_margin="16dp"
                app:srcCompat="@drawable/politica_2_cartel" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="0dp"
                android:text="@string/localizacionJornadasV"
                android:textColor="@color/colorPrimary" />




            <TextView
                android:id="@+id/transporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="0dp"
                android:text="@string/transporte"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/metro2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="32dp"
                android:paddingTop="8dp"
                android:paddingBottom="0dp"
                android:text="@string/metro_2"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/transporte_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="0dp"
                    android:text="@string/circular"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/linea6"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="7dp"
                    app:layout_constraintEnd_toStartOf="@+id/transporte_2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/linea_6" />

                <TextView
                    android:id="@+id/transporte_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="0dp"
                    android:text="@string/metro_ciudad_univ"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="38dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="7dp"
                    app:layout_constraintStart_toEndOf="@+id/transporte_2"
                    app:layout_constraintTop_toTopOf="@+id/transporte_3"
                    app:srcCompat="@drawable/metro_madrid_logo" />

            </LinearLayout>

            <TextView
                android:id="@+id/autobuses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="32dp"
                android:paddingTop="8dp"
                android:paddingBottom="0dp"
                android:text="@string/autobuses"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/autobuses_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="0dp"
                    android:text="@string/autobuses_lineas"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/autobuses_logo"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:layout_constraintEnd_toStartOf="@+id/transporte_2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/comollegarbus" />

                <TextView
                    android:id="@+id/autobuses_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_weight="1"
                    android:paddingTop="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="0dp"
                    android:text="@string/autobuses_parada"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />
            </LinearLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>