<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:id="@+id/scrollView_j2"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_jornadas1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:text="@string/title_jornadas_1"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="normal|bold" />

            <ImageView
                android:id="@+id/imageViewPortada1"
                android:layout_width="wrap_content"
                android:layout_height="208dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:contentDescription="Jorndadas1Portadaa"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="16dp"
                    app:srcCompat="@drawable/ic_event_black_24dp"
                    android:contentDescription="Calendario"/>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:paddingStart="2dp"
                    android:text="@string/fecha_jornadas_1"
                    android:textSize="12sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/content1_jornadas_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="1sp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp"
                android:text="@string/content_1_jornadas_1"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingLeft="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="4dp"
                android:text="@string/cartelJornadasV"
                android:textColor="@color/colorPrimary" />

            <ImageView
                android:id="@+id/cartel_jornadas"
                android:layout_width="match_parent"
                android:layout_height="521dp"
                android:layout_margin="16dp"
                android:contentDescription="cartelJornadas"/>


        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>