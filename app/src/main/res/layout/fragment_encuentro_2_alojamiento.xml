<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_encuentro2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:text="@string/Alojamiento"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="normal|bold"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="135dp" />


            <TextView
                android:id="@+id/contentVisita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:lineSpacingExtra="1sp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp"
                android:text="@string/contentAlojamiento"
                android:textAlignment="viewStart"
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toBottomOf="@+id/title_encuentro2"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingLeft="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="4dp"
                android:text="@string/alojamientoTitulo"
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toBottomOf="@+id/visitaLink"
                tools:layout_editor_absoluteX="0dp" />

            <com.google.android.gms.maps.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="16dp"
                android:layout_marginTop="19dp"
                android:paddingBottom="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                tools:layout_editor_absoluteX="16dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingLeft="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="4dp"
                android:text="@string/alojamientoPrecio"
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toBottomOf="@+id/visitaLink"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingLeft="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="4dp"
                android:text="@string/precio1"
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toBottomOf="@+id/visitaLink"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:paddingLeft="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="4dp"
                android:text="@string/precio2"
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toBottomOf="@+id/visitaLink"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:paddingLeft="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="4dp"
                android:text="@string/precio3"
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toBottomOf="@+id/visitaLink"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingLeft="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="4dp"
                android:text="@string/precio4"
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toBottomOf="@+id/visitaLink"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:paddingLeft="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="4dp"
                android:text="@string/precio5"
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toBottomOf="@+id/visitaLink"
                tools:layout_editor_absoluteX="0dp" />


            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="24dp"
                android:paddingLeft="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="4dp"
                android:text="@string/precio6"
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toBottomOf="@+id/visitaLink"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/transporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="0dp"
                android:text="@string/transporte"
                android:textColor="@color/colorPrimary" />

            <LinearLayout
                android:id="@+id/LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/transporte_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="0dp"
                    android:text="@string/circular"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/linea6"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="7dp"
                    app:layout_constraintEnd_toStartOf="@+id/transporte_2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/linea_6" />

                <TextView
                    android:id="@+id/transporte_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="0dp"
                    android:text="Ciudad Universitaria"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="38dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="7dp"
                    app:layout_constraintStart_toEndOf="@+id/transporte_2"
                    app:layout_constraintTop_toTopOf="@+id/transporte_3"
                    app:srcCompat="@drawable/metro_madrid_logo" />

            </LinearLayout>



        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>